<script type="text/javascript">

    var map;

    newMap();
function newMap() {
    $(document).ready(function(){
      map = new GMaps({
        div: '#map',
        lat: 30.2359091167,
        lng: -97.7951395833,
        markerClusterer: function(map) {
          return new MarkerClusterer(map);
        }
      });

});
}

function xml_http_post(data ) {

	var submitNumber = parseInt(data);

        $.ajax("/ajax/hvcnext", {
            type: "post",
            data: JSON.stringify(submitNumber),
            contentType:"application/json; charset=utf-8",
            dataType:"json",
            success: next_handler,
        });

}

function test_button() {
    newMap();
    var data = document.test_form.test_text.value;
    xml_http_post(data);
}

function next_handler(response) {

	var ret = response.response
	alert(ret);  

	var latitude = 30.2359091167;
	var longitude = -97.7951395833;
	map.addMarker({lat: latitude,lng: longitude,title: 'Marker #' +1});

	var latitude = 30.2691029532;
	var longitude = -97.7493953705;
	map.addMarker({lat: latitude,lng: longitude,title: 'Marker #' +2});
	
}
</script>

